{
	"compilerOptions": {
		"target": "es2017",
		"module": "commonjs",
		"outDir": "./build",
		"rootDir": "./source",
		"declaration": false,
		"strict": true,
		"sourceMap": true,
		"noImplicitAny": true,
		"alwaysStrict": true,
		"typeRoots": [
			"./node_modules/@types"
		]
	},
	"exclude": [
		"./build/*",
		"./node_modules/*",
	],
	"include": [
		"./source/**/*.ts"
	]
}